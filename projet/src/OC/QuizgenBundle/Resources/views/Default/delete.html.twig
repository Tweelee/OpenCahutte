{# src/OC/Resources/views/Default/delete.html.twig #}

{% extends "OCQuizgenBundle::layout.html.twig" %}

{% block title %}
  Supprimer un quiz - {{ parent() }}
{% endblock %}

{% block oc_quizgen_body %}

  <h2>Supprimer un quiz</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'quiz "{{ quiz.titre }}" ?
  </p>

  {# On met l'id de l'quiz dans la route de l'action du formulaire #}
  <form action="{{ path('oc_quizgen_delete', {'id': quiz.id}) }}" method="post">
    <a href="{{ path('quizgen_view', {'slug': quiz.slug}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour aux quizs
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}