{# src/OC/UserBundle/Resources/views/layout.html.twig #}
{# On étend notre layout #}
{% extends "OCQuizgenBundle::layout.html.twig" %}

{# Dans notre layout, il faut définir le block body #}
{% block body %}

  
  
  {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}

   
   
   {% if app.request.attributes.get('_route') == 'fos_user_security_login' %}
   {% include "OCUserBundle:Security:login.html.twig" %}
   {% endif %}
   
   {% if app.request.attributes.get('_route') == 'fos_user_registration_register' %}
   {% include "OCUserBundle:Registration:register.html.twig" %}
   {% endif%}
   
   
   {% if app.request.attributes.get('_route') == 'fos_user_registration_confirmed' %}
   {% include "OCUserBundle:Registration:confirmed.html.twig" %}
   {% endif%}
   
   {% if app.request.attributes.get('_route') == 'fos_user_profile_show' %}
   {% include "OCUserBundle:Profile:show.html.twig" %}
   {% endif%}
   
   {% if app.request.attributes.get('_route') == 'fos_user_profile_edit' %}
   {% include "OCUserBundle:Profile:edit.html.twig" %}
   {% endif%}
   
   {% if app.request.attributes.get('_route') == 'fos_user_change_password' %}
   {% include "OCUserBundle:ChangePassword:changePassword.html.twig" %}
   {% endif%}
 
{% endblock body %} 
   </body>
