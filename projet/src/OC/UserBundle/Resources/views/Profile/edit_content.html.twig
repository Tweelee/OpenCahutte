{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
<table>   	 
  <tr>
  {{ form_errors(form.username) }}
    <td height="40px" width="200px"><label for="fos_user_form_username">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label></td>
    <td height="40px" width="200px"><input id="fos_user_form_username" type="text" name="fos_user_profile_form[username]" value="{{ form.vars.value.username }}" required="required" /></td><br><br>
  </tr>
 
   <tr>
   {{ form_errors(form.email) }}
    <td height="40px" width="200px"><label for="fos_user_form_email">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
    <td height="40px" width="200px"><input id="fos_user_form_email" type="email" name="fos_user_profile_form[email]" value="{{ form.vars.value.email }}" required="required" /></td><br><br>
   </tr> 
   
   <tr>  
   {{ form_errors(form.current_password) }}
    <td height="40px" width="200px"><label for="fos_user_form_current_password">{{ 'form.current_password'|trans({}, 'FOSUserBundle') }}</label>
    <td height="40px" width="200px"><input id="fos_user_form_current_password" type="password" name="fos_user_profile_form[current_password]" required="required" /></td><br><br>
   </tr>
   
    {{ form_widget(form._token) }}
</table>
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" /><br><br><br>     
    </div>
</form>
