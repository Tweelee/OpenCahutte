{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
   	 
  {{ form_errors(form.username) }}
    <label for="fos_user_form_username">{{ 'form.username'|trans({}, 'FOSUserBundle') }}</label>
    <input id="fos_user_form_username" type="text" name="fos_user_profile_form[username]" value="{{ form.vars.value.username }}" required="required" /><br><br>
   
   {{ form_errors(form.email) }}
    <label for="fos_user_form_email">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>
    <input id="fos_user_form_email" type="email" name="fos_user_profile_form[email]" value="{{ form.vars.value.email }}" required="required" /><br><br>
   
     
   {{ form_errors(form.current_password) }}
    <label for="fos_user_form_current_password">{{ 'form.current_password'|trans({}, 'FOSUserBundle') }}</label>
    <input id="fos_user_form_current_password" type="password" name="fos_user_profile_form[current_password]" required="required" /><br><br>
    	 
    {{ form_widget(form._token) }}

    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" /><br><br><br>     
    </div>
</form>
